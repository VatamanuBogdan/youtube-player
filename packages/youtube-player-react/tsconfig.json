{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
}